@model OPMS.ViewModels.AboutMultiViewModel




@if (Model?.NewsBannerViewModel != null)
{
    foreach (var item in Model.NewsBannerViewModel)
    {
        <div class="">
            <div class="view jarallax   my-sm-0" data-jarallax='{"speed": 0.4}' style="background-image: url('https://i.ibb.co/TWb2JDQ/News.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; height:100vh;">
                <!-- Mask & flexbox options-->
                <div class="mask mask BackCOLOR d-flex justify-content-center align-items-center">
                    <!-- Content -->
                    <div class="container">
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="col-md-12 white-text text-center my-5">
                                <h1 class=" cke_font responsive-font-size mb-0 pt-5 pb-md-0 pb-sm-3 pb-3 white-text font-weight-bold wow fadeInDown" data-wow-delay="0.3s"><span class="text-white text-uppercase">@item.Title</span></h1>
                                <hr class="hr-light w-50">
                                <h1 class=" text-uppercase  pt-3 pb-md-2 pb-sm-3 pb-3 white-text font-weight-bold wow fadeInDown"
                                    data-wow-delay="0.3s">
                                    <span class="text-white text-uppercase ">@item.SubTitle</span>
                                </h1>
                                <div class="wow fadeInDown" data-wow-delay="0.3s">
                                    <a href="/AboutUs" class="btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-building fa-lg pr-1"></i> About </a>
                                    <a href="/Home" class="btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-home fa-lg pr-1"></i> Home</a>
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
               
            </div>
        </div>

    
  <div class="container my-3 py-3  py-sm-1  ">


   <div class="container my-3 ">


  <!--Section: Content-->
  <section class="dark-grey-text mb-5">

    <div class="row ">
      <div class="col-md-7 mb-1">

        <div class="view my-5">
          <img src="~/Content/Img/undraw_online_articles_79ff.svg" class="img-fluid" alt="smaple image">
        </div>

      </div>
      <div class="col-md-5 d-flex align-items-center">
        <div>
          
          <h3 class="font-weight-bold mb-4">@item.SubTitle</h3>

        	<p>@Html.Raw(item.Content)</p>

        	<a href="@item.ButtonUrl" class="btn btn-deep-orange btn-rounded mx-0"><i class="fas fa-home fa-lg pr-1"></i> @item.ButtonText</a>

        </div>
      </div>
    </div>

  </section>


</div>

 </div>
    }

 }
@section NewsCustomCSS{

    <link href="~/Content/NewsCustomCSS.css" rel="stylesheet" />

}