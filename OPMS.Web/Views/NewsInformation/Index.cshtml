@model OPMS.ViewModels.AboutMultiViewModel
@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_NewsLayout.cshtml";
}

@if (Model?.NewsInfoViewModel != null)
{
    foreach (var item in Model.NewsInfoViewModel)
    {
        <div class=" my-2 text-justify-center ">
            <div class="cke_panel_frame  my-2" style="background-image: url('https://i.ibb.co/PWwyz47/news-Section-Image.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;" id="sidebar">
                <!-- Mask & flexbox options-->
                <div class="mask BackCOLOR d-flex justify-content-center align-items-center h-100">
                    <!-- Content -->
                    <div class="container h-100 my-5 py-5 my-sm-1 my-md-5">
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="col-md-6 white-text text-center text-md-left mt-xl-5 mb-5 ">
                                <h1 class="h1-responsive font-weight-bold mt-sm-5 animated  fadeInUp">@item.Title </h1>
                                <hr class="hr-light">
                                <p class="mx-3 mb-md-n1 mx-sm-3 text-justify ">@Html.Raw(item.Content)</p>
                                
                                <a href="/AboutUs" class="btn  btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-building fa-lg pr-1"></i> About Us</a>
                                <a href="/Contact" class="btn  btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"> <i class="fas fas fa-phone fa-lg pr-1"></i>Contact Us</a>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6 col-xl-5 my-md-4 my-lg-3 my-sm-0 wow fadeInRight" data-wow-delay="0.3s">
                                <img src="~/Content/Img/undraw_online_information_4ui6.svg" alt="" class="img-fluid">
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
            </div>

        </div>

        <div class="container mt-5">


            <!--Section: Content-->
            <section class="mx-md-5 dark-grey-text">

                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-12">

                        <!-- Card -->
                        <div class=" card card-cascade wider reverse">

                            <!-- Card image -->
                            <div class="view view-cascade BackCOLOR overlay">
                                <img class="card-img-top BackCOLOR" src="https://i.ibb.co/fkHTsGf/Eiffl-Tower.jpg" alt="Sample image" style="background-attachment:fixed; height:auto; background-position:center; background-size:cover;" >
                                <a href="#!">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>

                            <!-- Card content -->
                            <div class="card-body mt-xl-n5 card-body-cascade text-center mx-lg-5 mx-sm-2  blue lighten-4">

                                <!-- Title -->
                                <h3 class="font-weight-bold my-3"><a>@item.Title</a></h3>
                                <!-- Data -->
                                <p>Publish Date: @item.PublishDate</p>
                                <!-- Social shares -->
                                <p class="text-center">@Html.Raw(item.SubContent)</p>
                                <!-- Social shares -->
                                <div class="mt-3">
                                    <hr />
                                    <p class="font-weight-bold">Follow us on:</p>

                                    <!--Facebook-->
                                    <!--Facebook-->
                                    <a class="btn-floating btn-lg btn-fb" role="button"><i class="fab fa-facebook-f"></i></a>
                                    <!--Twitter-->
                                    <a class="btn-floating btn-lg btn-tw" role="button"><i class="fab fa-twitter"></i></a>
                                    <!--Google +-->
                                    <!--Linkedin-->
                                    <a class="btn-floating btn-lg btn-li" role="button"><i class="fab fa-linkedin-in"></i></a>
                                    <!--Instagram-->
                                    <!--Youtube-->
                                    <a class="btn-floating btn-lg btn-yt" role="button"><i class="fab fa-youtube"></i></a>


                                </div>
                            </div>
                            <!-- Card content -->

                        </div>
                        <!-- Card -->
                        <!-- Excerpt -->
                        <div class="mt-5">

                      
                        </div>

                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

              

            </section>
            <!--Section: Content-->


        </div>

    }


}

@section NewsCustomCSS{

    <link href="~/Content/NewsCustomCSS.css" rel="stylesheet" />

}