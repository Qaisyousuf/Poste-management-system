@model OPMS.ViewModels.BaseViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1990 12:00:00 GMT" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link href="@Model.SiteName" rel="stylesheet" />
    <link href="@Model.GoogelAds" rel="stylesheet" />
    <link href="@Model.GoogleSiteVerification" rel="stylesheet" />
    <title>@ViewBag.Title-@Model.SiteName</title>
    <link href="@Html.Raw(Model.GoogleSiteVerification)" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @if (Model.IsVisibleToSearchEngine == true)
    {
        <meta name="robots" content="follow,index" />
    }
    else if (Model.IsVisibleToSearchEngine == null)
    {
        <meta name="robots" content="follow,index" />
    }
    else
    {
        <meta name="robots" content="nofollow,noindex,noarchive,noodp,notranslate,noimageindex,nosnippet,noydir" />
    }
    @if (Model.IsMetaDataOn != null)
    {
        <meta name="author" content="@Model.SiteOwner" />
        <meta name="keywords" content="@Model.MetaKeywords" />
        <meta name="description" content="@Model.MetaDescritpion" />
    }
</head>
<body>
    <div class="navbar fixed-top navbar-expand-lg navbar-dark blue lighten-1 scrolling-navbar">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="~/Content/Img/LogoCoallia_Couleur (2).png" title="title" alt="additional title" />
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                @Html.Action("PagesMenuPartial", "Home")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container-fuild ">
        @Html.Action("Index", "ContactForms")
        @RenderBody()

        @RenderSection("ContactCustomCSS", required: true)

        <div class="footerBack">
            <footer class="page-footer font-small  blue lighten-3 mt-3">

                <div style="background-color: #42a5f5;">
                    <div class="container">

                        <!-- Grid row-->
                        <div class="row py-4 d-flex align-items-center">

                            <!-- Grid column -->
                            <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">
                                <h6 class="mb-0">@Model.SiteFooter</h6>
                            </div>
                            <!-- Grid column -->
                            <!-- Grid column -->
                            <div class="col-md-6 col-lg-7 text-center text-md-right">

                                <!--Facebook-->
                                <a class="btn-floating btn-sm btn-fb" role="button"><i class="fab fa-facebook-f"></i></a>
                                <!--Twitter-->
                                <!--Google +-->
                                <!--Linkedin-->
                                <a class="btn-floating btn-sm btn-li" role="button"><i class="fab fa-linkedin-in"></i></a>
                                <!--Instagram-->
                                <a class="btn-floating btn-sm btn-ins" role="button"><i class="fab fa-instagram"></i></a>
                                <!--Pinterest-->
                                <a class="btn-floating btn-sm btn-yt" role="button"><i class="fab fa-youtube"></i></a>
                                <!--Slack-->



                            </div>
                            <!-- Grid column -->

                        </div>
                        <!-- Grid row-->

                    </div>
                </div>

                <!-- Footer Links -->
                <div class="container text-center text-md-left">
                    <div class="container">


                        <!--Section: Content-->
                        <section class="dark-grey-text my-4">

                            <div class="row pr-lg-5">
                                <div class="col-md-6 offset-1">

                                    <div class="view ml-md-5 ml-sm-0">
                                        <img src="~/Content/Img/Footersvg.svg" class="img-fluid" alt="smaple image" style="height:250px;">
                                    </div>

                                </div>
                                <div class="col-md-5 d-flex align-items-center text-white">
                                    <div>

                                        <h3 class="font-weight-bold mb-4 text-white">@Model.SiteName</h3>

                                        <p class="text-white">@Html.Raw(Model.ContentFooterBase)</p>

                                        <a href="/SocialWokers" type="button" class="btn btn-primary btn-rounded mx-0">Social Worker</a>

                                    </div>
                                </div>
                            </div>

                        </section>
                        <!--Section: Content-->


                    </div>

                    <!-- Grid row -->
                    <div class="row mt-3">


                        <!-- Grid column -->
                        <div class="col-md-6 col-lg-2 col-xl-2 mx-auto mb-4">

                            <!-- Links -->
                            <h6 class="text-uppercase font-weight-bold">Navigation</h6>
                            <hr class="w-75 hr-light mb-4 mt-0 d-inline-block mx-auto text-center">
                            <p>
                                <i class="fas fa-home mr-3"></i> <a href="@Model.HomeUrlBase">@Model.HomeFooter</a>
                            </p>
                            <p>
                                <i class="fas fa-warehouse mr-3"></i> <a href="@Model.AboutUrl">@Model.AboutFooter</a>
                            </p>
                            <p>
                                <i class="fab fa-wpforms mr-3"></i> <a href="@Model.ContactUrlBase">@Model.ContactFooterBase</a>
                            </p>
                            <p>
                                <i class="fas fa-users mr-3"></i><a href="@Model.RolesUrlBase">@Model.RolesFooterBase</a>
                            </p>

                        </div>
                        <!-- Grid column -->
                        <!-- Grid column -->
                        <div class="col-md-6 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">

                            <!-- Links -->
                            <h6 class="text-uppercase font-weight-bold">Contact</h6>
                            <hr class="w-50 hr-light mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                            <p>
                                <i class="fas fa-home mr-3"></i> @Model.AddresFooterBase
                            </p>
                            <p>
                                <i class="fas fa-envelope mr-3"></i> @Model.EmailFooterBase
                            </p>
                            <p>
                                <i class="fas fa-phone mr-3"></i> @Model.ContactNumberFooterBase
                            </p>
                            <p>
                                <i class="fas fa-building mr-3"></i> @Model.SiteOwner
                            </p>

                        </div>
                        <!-- Grid column -->

                    </div>
                    <!-- Grid row -->

                </div>
                <!-- Footer Links -->
                <!-- Copyright -->
                <div class="footer-copyright text-center py-3 blue lighten-1">
                    <h6>Site Last Update: @Model.SiteLastUpdate</h6>
                    @Model.CopyrightFooterBase
                </div>
                <!-- Copyright -->

            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>