@model OPMS.ViewModels.SWorkerMultiVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Social.cshtml";
}
<hr />
@if (Model.sWBannerVMs != null)
{
    foreach (var item in Model.sWBannerVMs)
    {
        <div class="row">
            <div class="col-sm-6 col-md-12">
                <div class="thumbnail">
                    <img src="@item.BImage" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>@item.BTitle</h3>
                        <p>...</p>
                         <a href="@item.BButtonUrl" class="btn btn-primary" role="button">@item.BButton</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
@if (Model.SWorkerPageVMs != null)
{
    foreach (var item in Model.SWorkerPageVMs)
    {
        <div class="row">
            <div class="col-sm-6 col-md-12">
                <div class="thumbnail">
                    <div class="panel">
                        <div class="panel-heading">
                            @item.Title
                        </div>
                        <div class="panel-body">
                            @item.SubContent
                        </div>
                    </div>
                    <div class="caption">
                        <h3>@Html.Raw(item.Content)</h3>
                        <p>...</p>
                        <a href="@item.ButtonUrl" class="btn btn-default" role="button">@item.ButtonText</a>
                    </div>
                </div>
            </div>
        </div>

    }
}
<hr />

