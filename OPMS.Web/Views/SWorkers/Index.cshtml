@model OPMS.ViewModels.SWorkerMultiVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Social.cshtml";
}

@if (Model.sWBannerVMs != null)
{
    foreach (var item in Model.sWBannerVMs)
    {

        <div class="">
            <div class="view jarallax BackCOLOR  my-sm-0" data-jarallax='{"speed": 0.4}' style="background-image: url('https://i.ibb.co/zmX47Wx/Meeting.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; height:100vh;">
                <!-- Mask & flexbox options-->
                <div class="mask mask BackCOLOR d-flex justify-content-center align-items-center">
                    <!-- Content -->
                    <div class="container">
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="col-md-12 white-text text-center my-md-5 my-sm-1">
                                <h1 class="display-4  white-text font-weight-bold wow fadeInDown" data-wow-delay="0.3s"><span class="text-white text-uppercase">@item.BTitle</span></h1>
                                <hr class="hr-light my-1 w-50">
                                <h5 class="text-uppercase   pt-md-3 pt-sm-2 pb-md-2 pb-sm-4 white-text font-weight-bold wow fadeInDown"
                                    data-wow-delay="0.3s">
                                    <span class="text-white text-uppercase ">@item.BSubTitle</span>
                                </h5>
                                <div class="wow fadeInDown" data-wow-delay="0.3s">

                                    <a href="/Home" class="btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-home fa-lg pr-1"></i> Home</a>
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
                <div class="my-5"></div>
            </div>
        </div>
        <div class="container mt-5 pt-5 ">


            <!--Section: Content-->
            <section class="px-md-2 mx-md-2 text-center">

                <!--Grid row-->
                <div class="row mx-2">

                    <!--Grid column-->
                    <div class="col-md-6">

                        <h1 class="font-weight-bold text-primary">@item.BSubTitle</h1>

                        <p class="text-muted">@Html.Raw(item.BContent)</p>

                        <a href="@item.BButtonUrl" class="btn btn-primary btn-rounded waves-effect btn-md"><i class="fas fa-users fa-lg pr-1 "></i> @item.BButton</a>

                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6 mt-4">

                        <img src="~/Content/Img/undraw_status_update_jjgk.svg" class="img-fluid" alt="" id="">

                    </div>
                    <!--Grid column-->

                </div>


            </section>
            <!--Section: Content-->


        </div>

        <!-- Full Page Intro -->
    }
}
@if (Model.SWorkerPageVMs != null)
{
    foreach (var item in Model.SWorkerPageVMs)
    {
        <div class=" my-sm-5 my-md-5 my-lg-5 py-sm-5 py-md-4 py-lg-4 text-justify ">
            <div class="view  my-5" style="background-image: url('https://i.ibb.co/QfqGfGR/TeamMate.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center;" id="sidebar">
                <!-- Mask & flexbox options-->
                <div class="mask BackCOLOR d-flex justify-content-center align-items-center h-100">

                    <div class="container">
                        <!--Grid row-->
                        <div class="row mx-2 ">
                            <!--Grid column-->
                            <div class="col-md-7 text-white  mt-xl-5 mb-5 my-sm-5 my-md-5 my-lg-5 ">
                                <h1 class="h1-responsive font-weight-bold mt-sm-5 animated  fadeInUp">@item.Title </h1>
                                <hr class="hr-light">
                                <p class="text-justify">@Html.Raw(item.Content)</p>
                               
                                <p class="text-left">@Html.Raw(item.SubContent)</p>

                                <div class="text-center ">
                                    <a href="/AboutUs" class="btn  btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-building fa-lg pr-1"></i> About Us</a>
                                    <a href="/Contact" class="btn  btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"> <i class="fas fas fa-phone fa-lg pr-1"></i>Contact Us</a>
                                </div>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-5 my-sm-4 my-md-5 py-sm-2 py-md-5 py-lg-5 my-lg-5">
                                <img src="~/Content/Img/HowOPMSWorks.svg" alt="" class="img-fluid">
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
            </div>

        </div>
       
    }
}

@section SocialWorkerCustomCSS{

    <link href="~/Content/SocialWorkerCustomCSS.css" rel="stylesheet" />

}