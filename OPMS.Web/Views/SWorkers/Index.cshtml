@model OPMS.ViewModels.SWorkerMultiVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Social.cshtml";
}

@if (Model.sWBannerVMs != null)
{
    foreach (var item in Model.sWBannerVMs)
    {

        <div class="my-2">
            <div class="view jarallax BackCOLOR  my-sm-0" data-jarallax='{"speed": 0.4}' style="background-image: url('https://i.ibb.co/zmX47Wx/Meeting.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; height:100vh;">
                <!-- Mask & flexbox options-->
                <div class="mask mask BackCOLOR d-flex justify-content-center align-items-center">
                    <!-- Content -->
                    <div class="container">
                        <!--Grid row-->
                        <div class="row">
                            <!--Grid column-->
                            <div class="col-md-12 white-text text-center my-2">
                                <h1 class="display-4 mb-0 pt-5 pb-md-0 pb-sm-3 pb-2 white-text font-weight-bold wow fadeInDown" data-wow-delay="0.3s"><span class="text-white text-uppercase">@item.BTitle</span></h1>
                                <hr class="hr-light my-4 w-50">
                                <h5 class="text-uppercase  pt-2 pb-md-2 pb-sm-2 pb-2 white-text font-weight-bold wow fadeInDown"
                                    data-wow-delay="0.3s">
                                    <span class="text-white text-uppercase ">@item.BSubTitle</span>
                                </h5>
                                <div class="wow fadeInDown" data-wow-delay="0.3s">

                                    <a href="/Home" class="btn btn-outline-white btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-home fa-lg pr-1"></i> Home</a>
                                </div>
                            </div>
                            <!--Grid column-->
                        </div>
                        <!--Grid row-->
                    </div>
                    <!-- Content -->
                </div>
                <!-- Mask & flexbox options-->
                <div class="my-5"></div>
            </div>
        </div>
        <div class="container my-5 py-5 z-depth-1">


            <!--Section: Content-->
            <section class="px-md-5 mx-md-5 text-center dark-grey-text">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6 mb-4 mb-md-0">

                        <h3 class="font-weight-bold">@item.BSubTitle</h3>



                        <p class="text-muted">@Html.Raw(item.BContent)</p>

                        <a href="@item.BButtonUrl" class="btn btn-primary btn-rounded waves-effect btn-md"><i class="fas fa-users fa-lg pr-1 "></i> @item.BButton</a>

                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6 mb-4 mb-md-0  py-sm-0 py-md-5">

                        <img src="~/Content/Img/undraw_status_update_jjgk.svg" class="img-fluid img-responsive" alt="" id="zoom">

                    </div>
                    <!--Grid column-->

                </div>


            </section>
            <!--Section: Content-->


        </div>

        <!-- Full Page Intro -->
    }
}
@if (Model.SWorkerPageVMs != null)
{
    foreach (var item in Model.SWorkerPageVMs)
    {
        <div class="bg-transparent my-5">
            <!-- Mask & flexbox options-->
            <div class="mask">
                <!-- Content -->
                <div class="container h-100">
                    <!--Grid row-->
                    <div class="row align-items-center h-100">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <h1 class="blue-text font-weight-bold mb-0 pt-5 pb-md-0 pb-sm-3 pb-2">@item.Title</h1>
                            <p class="mb-4 pb-2 dark-grey-text">@Html.Raw(item.Content)</p>
                            <hr class="hr-light my-4">
                            <p class="mb-4 pb-2 dark-grey-text">@Html.Raw(item.SubContent)</p>

                            <a href="/AboutUs" class="btn btn-deep-orange btn-rounded waves-effect btn-md ml-lg-0"><i class="far fa-building fa-lg pr-1"></i> About Us</a>
                            <a href="/contact" class="btn btn-deep-orange btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-mobile-alt fa-lg pr-1"></i> Contact Us</a> 

                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6 my-5">
                            <img src="~/Content/Img/undraw_interview_rmcf.svg" alt="" class="img-fluid">
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
        <!-- Full Page Intro -->

    }
}
<hr />

@section SocialWorkerCustomCSS{

    <link href="~/Content/SocialWorkerCustomCSS.css" rel="stylesheet" />

}