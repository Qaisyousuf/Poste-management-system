@model OPMS.ViewModels.ContactMultiVM

@foreach (var item in Model.ContactPageViewModel)
{
    <div class="">
        <div class="view jarallax BackCOLOR  my-sm-0" data-jarallax='{"speed": 0.4}' style="background-image: url('https://i.ibb.co/xLPQCjC/grilswroking.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; height:100vh;">
            <!-- Mask & flexbox options-->
            <div class="mask mask BackCOLOR d-flex justify-content-center align-items-center">
                <!-- Content -->
                <div class="container">
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-12 white-text text-center my-5">
                            <h1 class="display-4 mb-0 pt-5 pb-md-0 pb-sm-3 pb-5 white-text font-weight-bold wow fadeInDown" data-wow-delay="0.3s"><span class="text-white text-uppercase">@item.Title</span></h1>
                            <h5 class="text-uppercase  pt-5 pb-md-2 pb-sm-3 pb-5 white-text font-weight-bold wow fadeInDown"
                                data-wow-delay="0.3s">
                                <span class="text-white text-uppercase ">@item.SubContent</span>
                            </h5>
                            <div class="wow fadeInDown" data-wow-delay="0.3s">
                                <a href="/AboutUs" class="btn peach-gradient btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-building fa-lg pr-1"></i> About </a>
                                <a href="/Home" class="btn peach-gradient btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-home fa-lg pr-1"></i> Home</a>
                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
            <div class="my-5"></div>
        </div>
    </div>

    <div class="container my-5 py-5 z-depth-1">


        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 text-center dark-grey-text">

            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <div class="col-md-6 mb-4 mb-md-0">

                    <h3 class="font-weight-bold">@item.Description</h3>



                    <p class="text-muted">@Html.Raw(item.Content)</p>

                    <a href="/SocialWokers" class="btn btn-primary btn-rounded waves-effect btn-md"><i class="fas fa-users fa-lg pr-1 "></i> Social Worker</a>

                    <hr class="my-5">

                    <p class="font-weight-bold">Follow us on:</p>

                    <!--Facebook-->
                    <!--Facebook-->
                    <a class="btn-floating btn-lg btn-fb" role="button"><i class="fab fa-facebook-f"></i></a>
                    <!--Twitter-->
                    <a class="btn-floating btn-lg btn-tw" role="button"><i class="fab fa-twitter"></i></a>
                    <!--Google +-->
                    <!--Linkedin-->
                    <a class="btn-floating btn-lg btn-li" role="button"><i class="fab fa-linkedin-in"></i></a>
                    <!--Instagram-->
                    <!--Youtube-->
                    <a class="btn-floating btn-lg btn-yt" role="button"><i class="fab fa-youtube"></i></a>
                    <!--Slack-->


                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-5 mb-4 mb-md-0 my-5 py-sm-0 py-md-5">

                    <img src="~/Content/Img/undraw_social_notifications_ro8o.svg" class="img-fluid" alt="">

                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->


    </div>

}

@if (Model?.ContactDetailsViewModel != null)
{
    foreach (var item in Model.ContactDetailsViewModel)
    {
        <div class="container my-5 py-5 ">


            <!--Section: Content-->
            <section class="dark-grey-text mb-5">

              

                <!-- Section heading -->
                <div class="form-header form-header blue text-white">
                    <h3 class="mt-2"><i class="fas fa-envelope"></i> @item.Title</h3>
                    <!-- Section description -->
                </div>
                
                <!-- Grid row -->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-lg-5 mb-lg-0 pb-lg-3 mb-4">

                        <!-- Form with header -->
                        <div class="card bg-transparent">
                            <div class="card-body">
                                <div class="row ">
                                    <div class="col-lg-12 col-md-12 mb-1">
                                        <h6 class="font-weight-bold mb-1">
                                            <a class="btn-floating prefix text-left blue accent-1">
                                                <i class="fas  fas fa-city"></i>
                                            </a> City: @item.CityName
                                        </h6>

                                    </div>
                                    <div class="col-lg-12 col-md-12 mb-1">
                                        <h6 class="font-weight-bold mb-1">
                                            <a class="btn-floating prefix text-left blue accent-1">
                                                <i class="fas fa-road"></i>
                                            </a> Street: @item.StreetName
                                        </h6>

                                    </div>
                                    <div class="col-lg-12 col-md-12 mb-1">
                                        <h6 class="font-weight-bold mb-1">
                                            <a class="btn-floating prefix text-left blue accent-1">
                                                <i class="fas fa-archway"></i>
                                            </a> Area: @item.AreaName
                                        </h6>

                                    </div>
                                   
                                    <div class="col-lg-12 col-md-12 mb-1">
                                        <h6 class="font-weight-bold mb-1">
                                            <a class="btn-floating prefix text-left blue accent-1">
                                                <i class="fas fa-home"></i>
                                            </a> Center: @item.CenterName
                                        </h6>

                                    </div>
                                    <div class="col-lg-12 col-md-12 mb-1">
                                        <h6 class="font-weight-bold mb-1">
                                            <a class="btn-floating prefix text-left blue accent-1">
                                                <i class="fas fa-mobile-alt"></i>
                                            </a> Mobile: @item.MobileNumber
                                        </h6>

                                    </div>
                                    <div class="col-lg-12 col-md-12 mb-1">
                                        <h6 class="font-weight-bold mb-1">
                                            <a class="btn-floating prefix text-left blue accent-1">
                                                <i class="fas fa-envelope"></i>
                                            </a> Email: @item.CenterEmail
                                        </h6>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Form with header -->

                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-lg-7">

                        <!--Google map-->
                        <div id="map-container-section" class="z-depth-1-half map-container-section mb-4" style="height: 487px">
                            <iframe src="https://maps.google.com/maps?q=Manhatan&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0"
                                    style="border:0" allowfullscreen></iframe>
                        </div>
                        <!-- Buttons-->
                       

                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row -->

            </section>
            <!--Section: Content-->


        </div>
       
    }
}

@if (Model?.ContactInfoViewModel != null)
{
    foreach (var item in Model.ContactInfoViewModel)
    {
        <div class="jumbotron">
            <h3>Title: @item.Title</h3>
            <p> @Html.Raw(item.Content)</p>
            <h5>Place Name: @item.PlaceName</h5>
            <h5>Place Adress: @item.PlaceAddress</h5>
            <h5>Mobile Number: @item.PlaceContactNumber</h5>
            <h5>WebSite:@item.WebSite</h5>
            <h5>Postal Code: @item.PostalCode</h5>

            <p>
                <a class="btn btn-primary btn-lg" href="@item.AboutUrl" role="button">
                    About
                </a>
            </p>
        </div>
    }
}
@section ContactCustomCSS{

    <link href="~/Content/ContactCustomCSS.css" rel="stylesheet" />

}
<script>
    new WOW().init();
</script>