@model  OPMS.ViewModels.SocialWorkerProfileList

@if (Model.HomeRRVMs != null)
{
<div class="container">
    
    <div class="row">

        @foreach (var item in Model.HomeRRVMs)
        {

            <div class="col-md-4 mb-4">

                <div class="card card-cascade bg-transparent hoverable">

                    <!-- Card image -->
                    <div class="view px-4 pt-3">
                        <img class="card-img-top img-fluid" id="zoom" src="@item.IconUrl" alt="Card image cap">
                    </div>

                    <!-- Card content -->
                    <div class="card-body card-body-cascade dark-grey-text text-justify mx-3 my-2">

                        <!-- Title -->
                        <!-- Subtitle -->
                        <h4 class="font-weight-bold text-primary py-2 text-center">@item.Title</h4>
                        <hr />
                        <!-- Text -->
                        <p class=" dark-grey-text mb-1 pb-2">@Html.Raw(item.Content) </p>
                    </div>

                    
                    <div class="card-footer pl-4">

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary btn-rounded" data-toggle="modal" data-target="#basicExampleModal"> <i class="fas fa-book-open mr-2"></i>
                            Read More
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Roles and Responsibility</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                       @Html.Raw(item.Content)
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                       
                                    </div>
                                </div>
                            </div>
                        </div>

                       
                    </div>

                </div>

            </div>
        }
    </div>
</div>
       
   
}
@section HomeCustomCSS{

    <link href="~/Content/HomeCustomCSS.css" rel="stylesheet" />

}