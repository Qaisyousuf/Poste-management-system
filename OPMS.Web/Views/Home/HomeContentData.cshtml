@model OPMS.ViewModels.HomeContentVM

@if (Model?.Id != null)
{
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="..." class="img-responsive">
        <div class="caption">
            <h3>@Model.Title</h3>
            <h5>@Model.SubTitle</h5>
            <p>@Html.Raw(Model.Content)</p>
            <p>@Model.SubContent</p>
            <a href="@Model.ButtonUrl" class="btn btn-primary" role="button">@Model.ButtonText</a>
        </div>
    </div>
}
@section HomeCustomCSS{

    <link href="~/Content/HomeCustomCSS.css" rel="stylesheet" />

}