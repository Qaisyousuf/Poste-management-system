@model OPMS.ViewModels.HomeContentVM

@if (Model?.Id != null)
{
<div class="container">


    <!--Section: Content-->
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="dark-grey-text mt-md-5 mt-sm-3 pb-md-5 mb-md-4 h-100 mt-xl-5">

            <div class="row mb-5 mx-2">
                <div class="col-md-7 mt-md-3">

                    <div class="view mr-md-4">
                        <img src="~/Content/Img/undraw_web_devices_ad58.svg" class="img-fluid img-responsive" alt="smaple image">
                    </div>

                </div>
                <div class="col-md-5 d-flex align-items-center">
                    <div class="pt-3">

                        <h3 class="font-weight-bold mb-4">@Model.Title</h3>
                        <p class=" text-justify dark-grey-text">@Html.Raw(Model.Content)</p>
                        <h3 class="font-weight-bold mb-4">@Model.SubTitle</h3>
                        <p class="text-justify dark-grey-text">@Html.Raw(Model.SubContent)</p>

                       
                        <a href="@Model.ButtonUrl" class="btn btn-primary btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-book-reader fa-lg pr-1"></i> Read More</a>
                    </div>
                </div>
            </div>

        </div>
    </div>


</div>
}
@section HomeCustomCSS{

    <link href="~/Content/HomeCustomCSS.css" rel="stylesheet" />

}