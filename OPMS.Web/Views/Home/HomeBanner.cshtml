@model OPMS.ViewModels.HomeBannerVM


@if (Model?.Id != null)
{
    <div class="container-fluid my-3">

        <div class="my-5">
            <!-- Mask & flexbox options-->
            <div class="mask my-5">
                <!-- Content -->
                <div class="container h-auto">
                    <!--Grid row-->
                    <div class="row align-items-center h-100">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <h1 class="font-weight-bold mb-1 animated fadeInUp slower"><span class="text-primary">@Model.Title</span> </h1>
                            <h3 class="mb-2 animated fadeInUp slower"><span class="deep-orange-text">@Model.SubTitle</span> </h3>
                            <p class="text-justify mb-1 pb-2 deep-purple-text">@Html.Raw(Model.Content)</p>
                            <a href="/CheckPost" class="btn peach-gradient btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-user-check fa-lg pr-1"></i> Get Started</a>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6 my-5">
                            <img src="~/Content/Img/undraw_manage_chats_ylx0.svg" alt="" class="img-fluid" id="zoom">
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
    </div>


}




@section HomeCustomCSS{

    <link href="~/Content/HomeCustomCSS.css" rel="stylesheet" />

}

