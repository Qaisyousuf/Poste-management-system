@model OPMS.ViewModels.HomeBannerVM


@if (Model?.Id != null)
{

<div class="homeBanner">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" class="img-responsive">
        <div class="caption">
            <h3>@Model.Title</h3>
            <p>@Html.Raw(Model.Content)</p>
            <a href="@Model.ButtonUrl" class="btn btn-primary" role="button">@Model.ButtonText</a>
          
        </div>
    </div>
</div>
   
}



@section HomeCustomCSS{

    <link href="~/Content/HomeCustomCSS.css" rel="stylesheet" />

}

