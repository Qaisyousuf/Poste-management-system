@model OPMS.ViewModels.HomeBannerVM


@if (Model?.Id != null)
{
    <div class="container-fluid px-4">

        <div class="">
            <!-- Mask & flexbox options-->
            <div class="mask my-2">
                <!-- Content -->
                <div class="container h-auto">
                    <!--Grid row-->
                    <div class="row align-items-center h-100">
                        <!--Grid column-->
                        <div class="col-md-6">
                            <h1 class="font-weight-bold mb-2 animated fadeInUp slower"><span class="text-primary">@Model.Title</span> </h1>
                            <h3 class="mb-2 animated fadeInUp slower"><span class="deep-orange-text">@Model.SubTitle</span> </h3>
                            <p class="mb-1 pb-2  px-5">@Html.Raw(Model.Content)</p>
                            <a href="/CheckPost" class="btn btn-primary btn-rounded waves-effect btn-md ml-lg-0"><i class="fas fa-user-check fa-lg pr-1"></i> Get Started</a>
                        </div>
                        <!--Grid column-->
                        <!--Grid column-->
                        <div class="col-md-6 my-5">
                            <div class="img-fluid">

                              <img src="~/Content/Img/HomeBannerImage.svg" class="img-fluid" id="zoom" />

                            </div>
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </div>
    </div>


}




@section HomeCustomCSS{

    <link href="~/Content/HomeCustomCSS.css" rel="stylesheet" />

}

