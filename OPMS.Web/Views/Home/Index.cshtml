@model OPMS.ViewModels.PageViewModel
@{
    ViewBag.Title = ViewBag.PageTitle;
}
<div class="container">


    <!--Section: Content-->
    <section class="pb-5 pt-5">

        <!-- Grid row -->
        <div class="row mx-2">

            <!-- Grid column -->
            <div class="col-lg-5 col-md-12 mb-lg-0 mb-4">

                <!-- Featured image -->
                <div class="view overlay rounded  mb-lg-0 pb-5">
                    <div class="view overlay wow fadeIn"  data-wow-delay="0.2s" id="HomeSectionBackImage">
                        <img src="~/Content/Img/undraw_delivery_address_03n0.svg" class="img-fluid" alt="HomeBanner" id="zoom">

                    </div>
                </div>

            </div>
            <!-- Grid column -->
            <!-- Grid column -->
            <div class="col-lg-7 col-md-6  mb-4 mt-xl-4 pt-3 wow fadeIn " data-wow-delay="0.2s">

                <h1 class="font-weight-bold"><span class="text-primary">@Model.Title</span></h1>
                <hr class="hr-light" />
                <p class="text-justify" >@Html.Raw(Model.Content) </p>
                <a href="/CheckPost" class="btn btn-primary btn-rounded waves-effect btn-md ml-lg-1"><i class="fa fa-check fa-lg pr-1"></i> Check The Post</a>
                @*<a class="btn btn-outline-primary mx-0" href="#">Read More <i class="fas fa-arrow-right fs-9 ml-2"></i></a>*@

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->

    </section>
    <!--Section: Content-->


</div>
