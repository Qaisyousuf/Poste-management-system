
@{
    ViewBag.Title = "About";
}
<hr />
<h4>Liste de la section À propos</h4>
<p>
    @*//<button class="btn btn-primary"><a href="/Pages/Create"></a>Create</button>*@
    <a class="btn btn-primary" href="/OPMSAdmin/AboutSections/Create">Créer une nouvelle section</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Title</th>
            <th><i class="glyphicon glyphicon-link"></i> Main Title</th>
            <th><i class="glyphicon glyphicon-menu-right"></i> Sub Title</th>
            <th><i class="glyphicon glyphicon-menu-right"></i> Publish date</th>
            <th><i class="glyphicon glyphicon-wrench"></i> Actions</th>
        </tr>
    </thead>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "responsive": true,
                "info": false,
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',


                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',


                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',


                    },

                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',


                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                ],
                "ajax": {
                    "url": "/OPMSAdmin/AboutSections/GetAboutSectionData",
                    "type": "Get",
                    "dataType": "json"
                },
                "columnDefs": [
                    {
                        "data": "Title",
                        "targets": 0,

                        "render": function (data, type, row, meta)
                        {
                            return data;
                        }
                    },
                    {
                        "data": "MainTitle",
                        "targets": 1,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "SubTitle",
                        "targets": 2,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "PublishDateTime",
                        "targets": 3,

                        "render": function (data, type, row, meta) {
                            return moment(row.PublishDateTime).locale("fr").format('LLL');
                        }
                    },
                    {
                        "data": "actions",
                        "targets": 4,
                        "className": "dt-body-right",
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/AboutSections/Edit/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Éditer</a> | <a class="btn btn-danger btn-bg" href="/OPMSAdmin/AboutSections/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer</a> <a class="btn btn-default btn-bg" href="/OPMSAdmin/AboutSections/Details/' + row.Id + '"><i class="glyphicon glyphicon-info-sign"></i> Détails</a>';
                           
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}


