@model OPMS.ViewModels.FloorsAddressViewModel

@{
    ViewBag.Title = "Floors";
}
<hr />
<h4>Voulez-vous vraiment modifier le <button disabled class="btn btn-danger">@Model.FloorsNumber</button> ?</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.FloorsNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FloorsNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FloorsNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sauvegarder les modifications" class="btn btn-primary" />
                <a class="btn btn-primary" href="/OPMSAdmin/Floors/Index">Retour à la liste principale</a>
            </div>
        </div>
    </div>
}

