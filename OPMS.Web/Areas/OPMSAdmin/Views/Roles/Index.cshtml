

@{
    ViewBag.Title = "Index";
}
<hr />
<h4>Liste des rôles</h4>
<a class="btn btn-primary" href="/OPMSAdmin/Roles/Create">Créer un rôle</a>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
                <thead class="btn-primary">
                    <tr>
                        <th><i class="glyphicon glyphicon-user"></i> Name</th>
                    
                        <th><i class="glyphicon glyphicon-wrench"></i> actions</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                info: false,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, 'All']],
                dom: 'lfrtiBp',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                ajax: {
                    url: '/OPMSAdmin/Roles/GetRolesData',
                    type: 'Post',
                    dataType: 'json'
                },
                columns: [
                    { data: 'Name' },
                  
                    {
                        "data": "actions",
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/Roles/Edit/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Modifier le rôle</a> | <a class="btn btn-danger btn-bg" href="/OPMSAdmin/Roles/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer le rôle</a> <a class="btn btn-default btn-bg" href="/OPMSAdmin/Roles/Details/' + row.Id + '"><i class="glyphicon glyphicon-info-sign"></i> Détails du rôle</a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}
