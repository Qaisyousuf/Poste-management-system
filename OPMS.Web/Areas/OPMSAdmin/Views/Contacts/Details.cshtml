@model OPMS.ViewModels.ContactViewModel

@{
    ViewBag.Title = "Details";
}
<div class="card card-cascade narrower blue lighten-5">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header  blue lighten-1 text-white">

        <!-- Title -->
        <h4 class="text-white">Details of the contact forms</h4>
        <!-- Subtitle -->
    </div>

    <div class="card-body card-body-cascade text-center">

        <hr />
        <h4 class="text-info">Details of the <button disabled class="btn btn-info  btn-sm  btn-rounded"><i class="fas fa-info-circle pr-2"></i> @Model.FullName</button> contact forms</h4>
        <br />
        <div>
            <div class="col-md-8 offset-2 text-left">
                <div class="table-wrapper table-responsive table-bordered table-striped ">
                    <!--Table-->
                    <table class="table table-hover mb-0 table-striped ">
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="far fa-id-card"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.FullName)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.FullName)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-at"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.Email)</td>

                                <td class="text-primary"> @Html.DisplayFor(model => model.Email)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-map-pin"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Address)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.Address)</td>
                            </tr>

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-phone"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.MobileNumber)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.MobileNumber)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-map-marked"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.IpAddres)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.IpAddres)</td>
                            </tr>

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-calendar-alt"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ContactedDate)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.ContactedDate)</td>
                            </tr>

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="far fa-file-alt"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.ContactedLocation)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.ContactedLocation)</td>
                            </tr>


                            <tr class="">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="far fa-newspaper"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.MessageText)</td>
                                <td class="collapse" id="collapseExample">@Html.Raw(Model.MessageText)</td>
                                <td>
                                    <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample"
                                            aria-expanded="false" aria-controls="collapseExample">
                                        View Content
                                    </button>
                                </td>
                            </tr>

                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>

                <div class="col-md-9 offset-3 pt-4">
                    @Html.ActionLink("Update", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" }) |
                    <a class="btn btn-primary" href="/OPMSAdmin/Contacts/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                </div>



            </div>

        </div>


    </div>

</div>

