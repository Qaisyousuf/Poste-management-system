

@{
    ViewBag.Title = "SiteSettings";
}
<hr />
<h4>Liste des paramètres du site</h4>
<p>
    <a class="btn btn-primary" href="/OPMSAdmin/SiteSettings/Create">Créer un paramètre de site</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-left"></i> Name</th>
            <th><i class="glyphicon glyphicon-align-left"></i> Owner</th>
            <th><i class="glyphicon glyphicon-align-left"></i> Update By</th>
            <th><i class="glyphicon glyphicon-align-left"></i> Update Date</th>
            <th><i class="glyphicon glyphicon-align-left"></i> Copywright</th>
            <th><i class="glyphicon glyphicon-wrench"></i> Actions</th>
        </tr>
    </thead>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                info: true,
                "responsive": true,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, 'All']],
                dom: 'lfrtiBp',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',


                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',


                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',


                    },

                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',


                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                ],
                ajax: {
                    url: '/OPMSAdmin/SiteSettings/GetSiteSettingData',
                    type: 'Get',
                    dataType: 'json'
                    },
                columnDefs: [

                    {
                        data: 'SiteName',
                        "targets": 0,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        data: 'SiteOwner',
                        "targets": 1,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        data: 'UpdateBy',
                        "targets": 2,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        data: 'SiteLastUpdated',
                        "targets": 3,

                        "render": function (data, type, row, meta) {
                            return moment(row.SiteLastUpdated).locale("fr").format('LLL');
                        }
                    },
                    {
                        data: 'CopyrightFooter',
                        "targets": 4,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },


                    {
                        data: 'actions',
                        "targets": 5,
                        "className": "dt-body-right",
                        render: function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/SiteSettings/Edit/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Éditer</a> | <a class="btn btn-danger btn-bg" href="/OPMSAdmin/SiteSettings/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer</a> |<a class="btn btn-default btn-bg" href="/OPMSAdmin/SiteSettings/Details/' + row.Id + '"><i class="glyphicon glyphicon-info-sign"></i> Détails</a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },
                ],
            })
        });
    </script>
    }
