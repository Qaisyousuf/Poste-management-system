
@{
    ViewBag.Title = "NewInfo";
}
<hr />
<h4>liste des informations d'actualité</h4>

<p>
    <a class="btn btn-primary" href="/OPMSAdmin/NewsInfo/Create">Créer de nouvelles informations</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Title</th>
            <th><i class="glyphicon glyphicon-link"></i> Link</th>
            <th><i class="glyphicon glyphicon-link"></i> Button Url</th>
            <th><i class="glyphicon glyphicon-link"></i> Publish Date</th>
            <th><i class="glyphicon glyphicon-link"></i> Banner</th>
            <th><i class="glyphicon glyphicon-wrench"></i> Actions</th>
        </tr>
    </thead>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": true,
                "responsive": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',


                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',


                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',


                    },

                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',


                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                ],
                "ajax": {
                    "url": "/OPMSAdmin/NewsInfo/GetNewsInfoData",
                    "type": "Get",
                    "dataType": "json"
                },
                "columnDefs": [
                    {
                        "data": "Title",
                        "targets": 0,
                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "ButtonText",
                        "targets": 1,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "ButtonUrl",
                        "targets": 2,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                   
                    {
                        "data": "PublishDate",
                        "targets": 3,

                        "render": function (data, type, row, meta) {
                            return moment(row.PublishDate).locale("fr").format('LLL');
                        }
                    },
                    {
                        "data": "NewsBanners.Title",
                        "targets": 4,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                  
                    {
                        "data": "actions",
                        "targets": 5,
                        "className": "dt-body-right",
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/NewsInfo/Edit/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Modifier</a> | <a class="btn btn-danger btn-bg" href="/OPMSAdmin/NewsInfo/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer</a> | <a class="btn btn-default btn-bg" href="/OPMSAdmin/NewsInfo/Details/' + row.Id + '"><i class="glyphicon glyphicon-info-sign"></i> Détails</a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}


