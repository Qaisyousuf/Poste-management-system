                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-pager"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ActionName)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.ActionName)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-pager"></i></a>
                                </th>
                                <td class="font-weight-bold">   @Html.DisplayNameFor(model => model.ControllerName)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.ControllerName)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fab fa-chrome"></i></a>
                                </th>
                                <td class="font-weight-bold">   @Html.DisplayNameFor(model => model.UserBrowser)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.UserBrowser)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-calendar-alt"></i></a>
                                </th>
                                <td class="font-weight-bold">   @Html.DisplayNameFor(model => model.Date)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.Date)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-clock"></i></a>
                                </th>
                                <td class="font-weight-bold">   @Html.DisplayNameFor(model => model.Time)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.Time)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-tablet-alt"></i></a>
                                </th>
                                <td class="font-weight-bold">   @Html.DisplayNameFor(model => model.DeviceName)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.DeviceName)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-sign-in-alt"></i></a>
                                </th>
                                <td class="font-weight-bold">   @Html.DisplayNameFor(model => model.AuthenticationActivity)</td>
                                <td class="text-primary">  @Html.DisplayFor(model => model.AuthenticationActivity)</td>
                            </tr>
                            <tr class="">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fab fa-chrome"></i> </a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.UserAgint)</td>
                                <td class="collapse" id="collapseExample">@Html.Raw(Model.UserAgint)</td>
                                <td>
                                    <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample"
                                            aria-expanded="false" aria-controls="collapseExample">
                                        View Content
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color col-md-9 offset-2 ">
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-trash-alt pr-2"></i> Delete</button> |
                        <a class="btn btn-primary" href="/OPMSAdmin/UserLocations/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                    </div>
                }
            </div>

        </div>


    </div>

</div>

