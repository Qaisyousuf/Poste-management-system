
@{
    ViewBag.Title = "UserInfo";

}

<div class="card card-cascade narrower blue lighten-5">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header  blue lighten-1 text-white">

        <!-- Title -->
        <h4 class="text-white">List of the resident  activity</h4>
        <!-- Subtitle -->
    </div>


    <div class="card-body card-body-cascade text-center">

        <!-- Text -->
        <div class="">
            <hr />
            <table id="dataTable" class="table table-bordered table-hover table-striped ">
                <thead class=" blue lighten-1 white-text">
                    <tr class="pt-2">
                        <th><i class="fas fa-map-marked-alt"></i> IP</th>
                        <th><i class="fas fa-user"></i> User</th>
                        <th><i class="fas fa-pager"></i> Page</th>
                        <th><i class="fas fa-calendar-alt"></i> Login /logout Date</th>
                        <th><i class="fas fa-clock"></i> Login /logout Time</th>
                        <th><i class="fas fa-tablet-alt"></i> Device</th>
                        <th><i class="fas fa-sign-in-alt"></i> Authentication</th>
                        <th><i class="fas fa-wrench"></i> Actions</th>
                    </tr>
                </thead>
            </table>
        </div>

    </div>

</div>

@section AdminCustomCSS{

    <link href="~/Content/AdminCustomCSS.css" rel="stylesheet" />

}
@section scripts{

    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav({
                breakpoint: 1200
            });
            // SideNav Scrollbar Initialization
            var sideNavScrollbar = document.querySelector('.custom-scrollbar');
            var ps = new PerfectScrollbar(sideNavScrollbar);
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": false,
                "responsive": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',

                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',


                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',


                    },

                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',


                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                ],
                "ajax": {
                    "url": "/OPMSAdmin/UserLocations/GetUserLocation",
                    "type": "Get",
                    "dataType": "json",

                },
                "columnDefs": [
                    {
                        "data": "Ip",
                        "targets": 0,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "LoginUser",
                        "targets": 1,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },

                    {
                        "data": "ControllerName",
                        "targets": 2,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },

                    {
                        "data": "Date",
                        "targets": 3,

                        "render": function (data, type, row, meta) {
                            return moment(row.Date).locale("fr").format('DD-MMMM-YYYY');
                        }
                    },
                    {
                        "data": "Time",
                        "targets": 4,

                        "render": function (data, type, row, meta) {
                            return moment(row.Time).locale("fr").format('HH:mm');
                        }
                    },
                    {
                        "data": "DeviceName",
                        "targets": 5,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "AuthenticationActivity",
                        "targets": 6,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "actions",
                        "targets": 7,
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn-floating btn-danger" href="/OPMSAdmin/UserLocations/Delete/' + row.Id + '"><i class="fas fa-trash-alt"></i> Supprimer </a>';

                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}


