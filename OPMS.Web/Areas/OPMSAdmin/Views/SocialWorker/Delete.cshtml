@model OPMS.ViewModels.SocialWorkerViewModel

@{
    ViewBag.Title = "Social Workers";
}
<div class="card card-cascade narrower blue lighten-5">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header  blue lighten-1 text-white">

        <!-- Title -->
        <h4 class="text-white">Delete The social worker </h4>
        <!-- Subtitle -->
    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <hr />
        <h4 class="text-danger">Are you sure you want to delete the <button disabled class="btn btn-danger btn-sm  btn-rounded"><i class="fas fa-trash-alt pr-2"></i> @Model.FullName</button> social worker ?</h4>
        <br />
        <div>
            <div class="col-md-8 offset-2 text-left">

                <div class="table-wrapper table-responsive table-bordered">
                    <!--Table-->
                    <table class="table table-hover mb-0 table-striped ">
                        <tbody>
                           

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-user"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.FullName)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.FullName)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-users-cog"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.Position)</td>
                                <td class="text-primary">@Html.DisplayFor(model => model.Position)</td>
                            </tr>

                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
                <br />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color col-md-9 offset-2 ">
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-trash-alt pr-2"></i> Delete</button> |
                        <a class="btn btn-primary" href="/OPMSAdmin/SocialWorker/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                    </div>
                }
            </div>

        </div>


    </div>

</div>


