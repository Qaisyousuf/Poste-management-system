@model OPMS.ViewModels.PageViewModel

@{
    ViewBag.Title = "Home";
}

<div class="card card-cascade narrower blue lighten-5">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header  blue lighten-1 text-white">

        <!-- Title -->
        <h4 class="text-white">Delete The Page</h4>
        <!-- Subtitle -->
    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <hr />
        <h4 class="text-danger">Are you sure you want to delete the <button disabled class="btn btn-danger btn-sm  btn-rounded"><i class="fas fa-trash-alt pr-2"></i> @Model.Title</button>  Page?</h4>
        <br />
        <div>
            <div class="col-md-8 offset-2 text-left">

                <div class="table-wrapper table-responsive table-bordered">
                    <!--Table-->
                    <table class="table table-hover mb-0 table-striped ">
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-tag"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Title)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.Title)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-link"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Slug)</td>

                                <td class="text-primary">@Html.DisplayFor(model => model.Slug)</td>
                            </tr>

                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-search-plus"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.MetaKeywordsPage)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.MetaKeywordsPage)</td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="far fa-file-alt"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.MetaDescriptionPage)</td>
                                <td class="text-primary">@Html.DisplayFor(model => model.MetaDescriptionPage)</td>
                            </tr>
                            <tr class="">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-tags"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.IsPageMetaDataOn)</td>
                                <td class="text-primary"> @Html.CheckBoxFor(model => model.IsPageMetaDataOn, new { style = "opacity: 1" })</td>
                            </tr>
                            <tr class=" ">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-search"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.IsVisibleToSearchEnginePage)</td>
                                <td class="text-primary"> @Html.CheckBoxFor(model => model.IsVisibleToSearchEnginePage, new { style = "opacity: 1" })</td>
                            </tr>
                            <tr class=" ">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-pager"></i></a>
                                </th>
                                <td class="font-weight-bold">@Html.DisplayNameFor(model => model.SidebarId)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.SidebarId)</td>
                            </tr>
                            <tr class="">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="far fa-image"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.BannerId)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.BannerId)</td>
                            </tr>
                            <tr class=" ">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-file-alt"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.HomeContentId)</td>
                                <td class="text-primary"> @Html.DisplayFor(model => model.HomeContentId)</td>
                            </tr>
                           
                            <tr class="">
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="far fa-newspaper"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Content)</td>
                                <td class="collapse" id="collapseExample">@Html.Raw(Model.Content)</td>
                                <td>
                                    <button class="btn btn-info btn-sm" type="button" data-toggle="collapse" data-target="#collapseExample"
                                            aria-expanded="false" aria-controls="collapseExample">
                                        View Content
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
                <br />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color col-md-9 offset-2 ">
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-trash-alt pr-2"></i> Delete</button> |
                        <a class="btn btn-primary" href="/OPMSAdmin/Pages/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                    </div>
                }
            </div>
          
        </div>


    </div>

</div>


@section AdminCustomCSS{

    <link href="~/Content/AdminCustomCSS.css" rel="stylesheet" />

}
