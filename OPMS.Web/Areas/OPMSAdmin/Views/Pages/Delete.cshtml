@model OPMS.ViewModels.PageViewModel

@{
    ViewBag.Title = "Home";
}

<div class="card card-cascade narrower blue lighten-5">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header  blue lighten-1 text-white">

        <!-- Title -->
        <h4 class="text-white">Delete The Page</h4>
        <!-- Subtitle -->
    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <hr />
        <h4 class="text-danger">Are you sure you want to delete the <button disabled class="btn btn-danger btn-sm  btn-rounded"><i class="fas fa-trash-alt pr-2"></i> @Model.Title</button>  Page?</h4>
        <hr />
        <div>
            <div class="col-md-8 offset-2 text-left">
                <table class="table table-hover table-striped">

                    <tbody>
                        <tr>
                            <th scope="row" class="font-weight-bold">  @Html.DisplayNameFor(model => model.Title)</th>
                            <td> @Html.DisplayFor(model => model.Title)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold">  @Html.DisplayNameFor(model => model.Slug)</th>
                            <td>   @Html.DisplayFor(model => model.Slug)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold">  @Html.DisplayNameFor(model => model.Content)</th>
                            <td>  @Html.DisplayFor(model => model.Content)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold">  @Html.DisplayNameFor(model => model.MetaKeywordsPage)</th>
                            <td> @Html.DisplayFor(model => model.MetaKeywordsPage)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold"> @Html.DisplayNameFor(model => model.MetaDescriptionPage)</th>
                            <td>  @Html.DisplayFor(model => model.MetaDescriptionPage)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold">   @Html.DisplayNameFor(model => model.IsPageMetaDataOn)</th>
                            <td> @Html.CheckBoxFor(model => model.IsPageMetaDataOn, new { style = "opacity: 1" })</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold">  @Html.DisplayNameFor(model => model.IsVisibleToSearchEnginePage)</th>
                            <td>  @Html.CheckBoxFor(model => model.IsVisibleToSearchEnginePage, new { style = "opacity: 1" })</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold"> @Html.DisplayNameFor(model => model.SidebarId)</th>
                            <td>  @Html.DisplayFor(model => model.SidebarId)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold"> @Html.DisplayNameFor(model => model.BannerId)</th>
                            <td> @Html.DisplayFor(model => model.BannerId)</td>

                        </tr>
                        <tr>
                            <th scope="row" class="font-weight-bold"> @Html.DisplayNameFor(model => model.HomeContentId)</th>
                            <td>  @Html.DisplayFor(model => model.HomeContentId)</td>

                        </tr>

                    </tbody>
                </table>



                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color col-md-9 offset-2 ">
                        <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-trash-alt pr-2"></i> Delete</button> |
                        <a class="btn btn-primary" href="/OPMSAdmin/Pages/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                    </div>
                }
            </div>
          
        </div>


    </div>

</div>


