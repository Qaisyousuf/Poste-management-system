@model IEnumerable<OPMS.ViewModels.PageViewModel>

@{
    ViewBag.Title = "Home";
}

            <div class="card card-cascade narrower blue lighten-5">

                <!-- Card image -->
                <div class="view view-cascade gradient-card-header  blue lighten-1 text-white">

                    <!-- Title -->
                    <h4 class="text-white">Liste des pages</h4>
                    <!-- Subtitle -->
                </div>

                <!-- Card content -->
                <div class="card-body card-body-cascade text-center">

                    <!-- Text -->
                    <div class="">

                        <p>

                            <a class="btn btn-primary align-left" href="/OPMSAdmin/Pages/Create">Créer une nouvelle page</a>
                        </p>
                        <hr />
                        <table id="dataTable" class="table table-hover ">
                            <thead class="blue white-text">
                                <tr class="pt-2">
                                    <th><i class="fas fa-hashtag"></i> Ttitle</th>
                                    <th><i class="fas fa-link"></i> Slug</th>
                                    <th><i class="fas fa-pager"></i> Sidebar</th>
                                    <th><i class="far fa-image"></i> Banner</th>
                                    <th><i class="fas fa-file-alt"></i> Content</th>
                                    <th><i class="fas fa-wrench"></i> Actions</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                </div>

            </div>


       
      

@section AdminCustomCSS{

    <link href="~/Content/AdminCustomCSS.css" rel="stylesheet" />

}
