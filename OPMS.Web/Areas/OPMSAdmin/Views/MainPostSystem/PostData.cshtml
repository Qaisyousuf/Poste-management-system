
@{
    ViewBag.Title = "PostData";
}
<hr />
<h4>Liste des postes livrés</h4>
<p>
    <a class="btn btn-primary" href="/OPMSAdmin/MainPostSystem/Index">Essayez un nouveau poste</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Nom</th>
            <th><i class="glyphicon glyphicon-link"></i> Poste</th>
            <th><i class="glyphicon glyphicon-link"></i> Envoyée par</th>
            <th><i class="glyphicon glyphicon-link"></i> temps envoyé</th>
            <th><i class="glyphicon glyphicon-link"></i> d'expiration du poste</th>
            <th><i class="glyphicon glyphicon-link"></i> Statut de poste</th>

            <th><i class="glyphicon glyphicon-"></i> Actions</th>
        </tr>
    </thead>
</table>


@section scripts{

   
    
    <script src="  https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": false,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": "Bfrtip",
                buttons: [

                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',
                        
                        className: 'btn-primary'
                        

                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',
                       

                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',
                        

                    },
                 
                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',
                        

                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                    //'csv', 'excel', 'pdf', 'print', 'colvis'
                ],
                "ajax": {
                    "url": "/OPMSAdmin/MainPostSystem/GetPostRecrods",
                    "type": "Get",
                    "dataType": "json",

                },
                "columnDefs": [
                    {
                        "data": "Users.UserName",
                        "targets": 0,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "PostSystems.Title",
                        "targets": 1,
                        "width": "10%",
                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "SocialWorker.FullName",
                        "targets": 2,
                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "SentDateTime",
                        "targets": 3,
                        "render": function (data, type, row, meta) {
                            return moment(row.SentDateTime).locale("fr").format('LLL');
                        }
                    },
                    {
                        "data": "PostExpirationDate",
                        "targets": 4,
                        //"render": $.fn.dataTable.render.moment('YYYY/MM/DD', 'Do MMM YY', 'fr'),
                        "render": function (data, type, row, meta) {
                            return moment(row.PostExpirationDate).locale("fr").format('LLL');

                        }


                    },
                    {
                        "data": "HasPost",
                        "targets": 5,

                        "render": function (data, type, row, meta) {
                            return '<input type="checkbox" checked = "' + data + '" >';
                        },


                    },
                    {
                        "data": "actions",
                        "targets": 6,
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-danger btn-bg" href="/OPMSAdmin/MainPostSystem/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer </a> | <a class="btn btn-primary btn-bg" href="/OPMSAdmin/MainPostSystem/UpdatePost/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Modifier </a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ],

            })
        });
    </script>
}




