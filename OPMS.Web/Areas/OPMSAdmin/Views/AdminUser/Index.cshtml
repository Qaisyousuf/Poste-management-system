

@{
    ViewBag.Title = "Users";
}
<hr />
<h4>Liste d'utilisateurs</h4>

<a class="btn btn-primary" href="/OPMSAdmin/AdminUser/Create">Enregistrer un nouvel utilisateur</a>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
                <thead class="btn-primary">
                    <tr>
                        <th><i class="glyphicon glyphicon-user"></i> User Name</th>
                        <th><i class="glyphicon glyphicon-envelope"></i> Email</th>
                        <th><i class="glyphicon glyphicon-phone"></i> Phone Number</th>
                        <th><i class="glyphicon glyphicon-wrench"></i> actions</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                info: false,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, 'All']],
                dom: 'lfrtiBp',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                ajax: {
                    url: '/OPMSAdmin/AdminUser/GetUserData',
                    type: 'Post',
                    dataType: 'json'
                },
                columns: [
                    { data: 'UserName' },
                    { data: 'Email' },
                    { data: 'PhoneNumber' },
                  
                    {
                        "data": "actions",
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/AdminUser/Edit/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Éditer</a> | <a class="btn btn-danger btn-bg" href="/OPMSAdmin/AdminUser/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer</a> |<a class="btn btn-default btn-bg" href="/OPMSAdmin/AdminUser/Details/' + row.Id + '"><i class="glyphicon glyphicon-info-sign"></i> Détails</a> |<a class="btn btn-info btn-bg" href="/OPMSAdmin/AdminUser/Details/' + row.Id + '"><i class="glyphicon glyphicon-phone"></i> Send SMS</a>  ';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}


