
@{
    ViewBag.Title = "Support";

}
<hr />
<h4>Help and Support</h4>

<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Title</th>
            <th><i class="glyphicon glyphicon-link"></i> Company</th>
            <th><i class="glyphicon glyphicon-link"></i> Developers</th>
            <th><i class="glyphicon glyphicon-link"></i> Application Name</th>
            <th><i class="glyphicon glyphicon-link"></i> Designed By</th>
            <th><i class="glyphicon glyphicon-link"></i> Created Date</th>
            

            <th><i class="glyphicon glyphicon-"></i> Actions</th>
        </tr>
    </thead>
</table>


@section scripts{

    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": true,
                "responsive": true,
                "lengthMenu": [[2,10, 25, 50, -1], [2,10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [

                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',


                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',


                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',


                    },

                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',


                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                    //'csv', 'excel', 'pdf', 'print', 'colvis'
                ],
                "ajax": {
                    "url": "/OPMSAdmin/HelpSupport/GetSupport",
                    "type": "Get",
                    "dataType": "json",

                },
                "columnDefs": [
                    {
                        "data": "Title",
                        "targets": 0,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "CompanyName",
                        "targets": 1,
                        "width": "10%",
                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "DeveloperName",
                        "targets": 2,
                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "SoftwareDownload",
                        "targets": 3,
                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "DesignedBy",
                        "targets": 4,

                        "render": function (data, type, row, meta) {
                            return data;

                        }


                    },
                    {
                        "data": "CreatedDate",
                        "targets": 5,

                        "render": function (data, type, row, meta) {
                            return moment(row.CreatedDate).locale("fr").format('LLL');
                        },


                    },
                    
                    {
                        "data": "actions",
                        "targets": 6,
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/HelpSupport/Edit/' + row.Id + '"><i class="glyphicon glyphicon-edit"></i> Supprimer </a> | <a class="btn btn-default btn-bg" href="/OPMSAdmin/HelpSupport/Details/' + row.Id + '"><i class="glyphicon glyphicon-info-sign"></i> Détails </a>';
                            return data;
                        }
                    },


                ],

            })
        });
    </script>
}



