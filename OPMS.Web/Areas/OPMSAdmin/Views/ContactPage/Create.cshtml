                    @Html.ValidationMessageFor(model => model.MetaKeywordseContact, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group md-form offset-1 col-md-9">
                @Html.LabelFor(model => model.MetaDescriptionContact, htmlAttributes: new { @class = "control-label offset-1" })
                <div class="offset-3">
                    @Html.EditorFor(model => model.MetaDescriptionContact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MetaDescriptionContact, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group md-form offset-1 col-md-9">
                @Html.LabelFor(model => model.ContactDetailsId, htmlAttributes: new { @class = "control-label offset-1" })
