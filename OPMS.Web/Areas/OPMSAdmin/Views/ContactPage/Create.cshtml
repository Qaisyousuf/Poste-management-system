                </div>
            </div>
            <div class="form-group ">
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(x => x.IsVisibleToSearchEngineContact, new { style = "opacity: 1" })<br />@Html.DisplayNameFor(x => x.IsVisibleToSearchEngineContact)</label>
                </div>
            </div>
            <div class="form-group ">
                <div class="checkbox">
                    <label>@Html.CheckBoxFor(x => x.IsContactMetaDataOn, new { style = "opacity: 1" })<br />@Html.DisplayNameFor(x => x.IsContactMetaDataOn)</label>
                </div>
            </div>

            <div class="form-group md-form offset-1 col-md-9">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label offset-1" })
                <div class="offset-3">
                    @Html.TextAreaFor(model => model.Content)
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group md-form offset-3 col-md-9">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" value="Create" class="btn btn-primary"><i class="fas fa-save pr-2"></i> Save</button>  |
                    <a class="btn btn-primary" href="/OPMSAdmin/ContactPage/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                </div>
            </div>
        </div>
        }


    </div>

</div>



