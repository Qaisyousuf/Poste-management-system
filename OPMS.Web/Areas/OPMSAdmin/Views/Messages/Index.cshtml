

@{
    ViewBag.Title = "Index";

}
<hr />
<h4>Liste des résidents disponibles pour envoyer des SMS</h4>

<p>
    <a class="btn btn-primary" href="/OPMSAdmin/MessageContainer/Create">Créer un nouveau type de message</a> |
    <a class="btn btn-primary" href="/OPMSAdmin/Messages/SMSRecords">SMS livré</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Nom résident</th>
            <th><i class="glyphicon glyphicon-link"></i> Numéro de mobile résident</th>
           

            <th><i class="glyphicon glyphicon-wrench"></i> Actions</th>
        </tr>
    </thead>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": false,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                "ajax": {
                    "url": "/OPMSAdmin/Messages/GetUserSMSData",
                    "type": "Get",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "UserName" },
                    { "data": "PhoneNumber" },
                    {
                        "data": "actions",
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-primary btn-bg" href="/OPMSAdmin/Messages/Edit/' + row.Id + '"><i class="glyphicon glyphicon-phone"></i> Envoyez un SMS</a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}

