
@{
    ViewBag.Title = "Delivered SMS";
}
<hr />
<h4>Liste des SMS livrés</h4>
<p>
    <a class="btn btn-primary" href="/OPMSAdmin/Messages/Index">Essayez un nouveau SMS</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Nom résident</th>
            <th><i class="glyphicon glyphicon-link"></i> Message</th>
            <th><i class="glyphicon glyphicon-link"></i> Envoyée par</th>
            <th><i class="glyphicon glyphicon-link"></i> Heure de la tâche</th>
            <th><i class="glyphicon glyphicon-link"></i> Lieu de tâche</th>
            <th><i class="glyphicon glyphicon-link"></i> Date d'envoi du SMS</th>
            <th><i class="glyphicon glyphicon-"></i> Actions</th>
        </tr>
    </thead>
</table>
@section scripts{
  
   
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": false,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                "ajax": {
                    "url": "/OPMSAdmin/Messages/SentSMSData",
                    "type": "Get",
                    "dataType": "json",

                },
                "columns": [
                    { "data": "Users.UserName" },
                    { "data": "MessageContainer.Title" },
                    { "data": "SocialWorker.FullName" },
                    { "data": "AppointmentOrTaskDateTime", render: $.fn.dataTable.render.moment('MMMM Do YYYY, h:mm:ss a') },
                    { "data": "Building.BuildingName" },
                    { "data": "SentDateTime", render: $.fn.dataTable.render.moment('MMMM Do YYYY, h:mm:ss a') },
                    {
                        "data": "actions",
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-danger btn-bg" href="/OPMSAdmin/Messages/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer </a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}



