
@{
    ViewBag.Title = "Delivered SMS";
}
<hr />
<h4>Liste des SMS livrés</h4>
<p>
    <a class="btn btn-primary" href="/OPMSAdmin/Messages/Index">Essayez un nouveau SMS</a>
</p>
<hr />
<table id="dataTable" class="table table-bordered table-hover table-responsive table-striped">
    <thead class="bg-primary">
        <tr>
            <th><i class="glyphicon glyphicon-align-center"></i> Nom résident</th>
            <th><i class="glyphicon glyphicon-link"></i> Message</th>
            <th><i class="glyphicon glyphicon-link"></i> Envoyée par</th>
            <th><i class="glyphicon glyphicon-link"></i> Heure de la tâche</th>
            <th><i class="glyphicon glyphicon-link"></i> Lieu de tâche</th>
            <th><i class="glyphicon glyphicon-link"></i> Date d'envoi du SMS</th>
            <th><i class="glyphicon glyphicon-"></i> Actions</th>
        </tr>
    </thead>
</table>
@section scripts{
  
   
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable({
                "info": false,
                "responsive": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "dom": "lfrtiBp",
                buttons: [
                    {
                        extend: 'copyHtml5',
                        text: '<i class="glyphicon glyphicon-file"> Copy</i>',
                        titleAttr: 'Copy',


                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> Excel</i>',
                        titleAttr: 'Excel',


                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="glyphicon glyphicon-save-file"> PDF</i>',
                        titleAttr: 'PDF',


                    },

                    {
                        extend: 'print',
                        text: '<i class="glyphicon glyphicon-print"> Print</i>',
                        titleAttr: 'PRINT',


                    },
                    {
                        extend: 'colvis',
                        text: '<i class="glyphicon glyphicon-eye-open"> Visibilité des colonnes</i>',
                        titleAttr: 'Columns Visiblty',


                    },
                ],
                "ajax": {
                    "url": "/OPMSAdmin/Messages/SentSMSData",
                    "type": "Get",
                    "dataType": "json",

                },
                "columnDefs": [
                    {
                        "data": "Users.UserName",
                        "targets": 0,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "MessageContainer.Title",
                        "targets": 1,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "SocialWorker.FullName",
                        "targets": 2,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "AppointmentOrTaskDateTime",
                        "targets": 3,

                        "render": function (data, type, row, meta) {
                            return moment(row.AppointmentOrTaskDateTime).locale("fr").format('LLL');
                        }
                    },
                    {
                        "data": "Building.BuildingName",
                        "targets": 4,

                        "render": function (data, type, row, meta) {
                            return data;
                        }
                    },
                    {
                        "data": "SentDateTime",
                        "targets": 5,

                        "render": function (data, type, row, meta) {
                            return moment(row.SentDateTime).locale("fr").format('LLL');
                        }
                    },
                    {
                        "data": "actions",
                        "targets": 6,
                        "render": function (data, type, row, meta) {
                            data = '<a class="btn btn-danger btn-bg" href="/OPMSAdmin/Messages/Delete/' + row.Id + '"><i class="glyphicon glyphicon-trash"></i> Supprimer </a>';
                            //  data = '<a class="btn btn-info btn-sm" href="/Users/Edit/' + row.Id + '">Edit</a> | <button class="btn btn-danger btn-sm" onclick="return Delete(' + row.Id + ')">DeletePage</button>';
                            return data;
                        }
                    },


                ]
            })
        });
    </script>
}



