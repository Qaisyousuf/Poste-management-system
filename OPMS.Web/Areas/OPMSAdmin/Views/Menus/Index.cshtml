@model IEnumerable<OPMS.ViewModels.MenuViewModel>
@{
    ViewBag.Title = "Index";
}
<hr />
<h4>Liste de déroute</h4>
<p>
    <a class="btn btn-primary" href="/OPMSAdmin/Menus/Create">Créer un menu</a>
</p>
<hr />
<table class="table table-responsive table-striped table-hover">
    <thead class="bg-primary">
        <tr>
            <th>
                <i class="glyphicon glyphicon-minus"></i> @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                <i class="glyphicon glyphicon-list"></i> @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                <i class="glyphicon glyphicon-link"></i> @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                <i class="glyphicon glyphicon-list-alt"></i> @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th>
                <i class="glyphicon glyphicon-wrench"></i> Actions
            </th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parent.Title)
        </td>
        <td>


            @Html.ActionLink("Éditer", "Edit", new { id = item.Id}, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Détails", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
