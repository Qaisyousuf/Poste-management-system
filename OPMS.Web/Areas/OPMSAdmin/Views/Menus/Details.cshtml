                                <td class="text-primary"> @Html.DisplayFor(model => model.Description) </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-align-center"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.Url)</td>

                                <td class="text-primary"> @Html.DisplayFor(model => model.Url) </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <a class="btn-floating btn-sm blue-gradient"><i class="fas fa-align-center"></i></a>
                                </th>
                                <td class="font-weight-bold"> @Html.DisplayNameFor(model => model.ParentId)</td>

                                <td class="text-primary"> @Html.DisplayFor(model => model.ParentId) </td>
                            </tr>


                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>

                <div class="col-md-9 offset-3 pt-4">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = " btn btn-info" }) |
                    <a class="btn btn-primary" href="/OPMSAdmin/Menus/Index"><i class="fas fa-undo-alt pr-2"></i> Back to Menu</a>
                </div>
            </div>

        </div>


    </div>

</div>

